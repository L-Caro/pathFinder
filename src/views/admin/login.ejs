<%- include("../partials/header") %>

<div class="container_admin">

  <h1 class="admin_title">Se connecter</h1>


  <% if (locals.errorMessage) { %>
    <div class="locals-message error">
      <%= errorMessage %>
    </div>
  <% } else if (successMessage) { %>
    <div class="locals-message succes">
      <%= successMessage %>
    </div>
  <% } %>


  <form class="admin_form" action="#" method="POST">
    <label class="form-label" for="firstname">Pseudo</label>
    <input class="form-input" type="firstname" id="firstname" name="firstname" placeholder="Pseudo">

    <label class="form-label" for="password">Mot de passe</label>
    <input class="form-input" type="password" id="password" name="password" placeholder="*********">
    
    <input class="form-button form-button-valid" type="submit" value="Se connecter">
  </form>
  <p class="admin_text">Pas encore inscrit ? => <a href="/signup">Inscris toi maintenant</a></p>

  
</div>

<%- include("../partials/footer") %>

