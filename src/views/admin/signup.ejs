<%- include("../partials/header") %>

<main class="container py-4">

  <h1>Inscription</h1>

  <!-- ! On utilise la méthode locals si la condition du controller n'est pas remplie -->
  <!-- ! Dans ce cas la, un champ n'est pas rempli -->
  <!-- ! Et on affiche un encart avec le message d'alerte -->
  <% if (locals.errorMessage) { %>
    <div>
      <%= errorMessage %>
    </div>
  <% } %>
  
  
    <form action="/signup" method="POST">
      <label class="form-label" for="firstname">Prénom</label>
      <input class="form-input" type="firstname" id="firstname" name="firstname" placeholder="Prénom">
  
      <label class="form-label" for="lastname">Nom</label>
      <input class="form-input" type="lastname" id="lastname" name="lastname" placeholder="Nom">
  
      <label class="form-label" for="email">Email</label>
      <input class="form-input" type="email" id="email" name="email" placeholder="email@domain.com">
  
      <label class="form-label" for="password">Mot de passe</label>
      <input class="form-input" type="password" id="password" name="password" placeholder="*********">
  
      <label class="form-label" for="confirmation">Mot de passe</label>
      <input class="form-input" type="password" id="confirmation" name="confirmation" placeholder="*********">
      
      <input class="btn btn-primary d-block my-4 mx-auto" type="submit" value="S'inscrire">
    </form>
  
  </main>

<%- include("../partials/footer") %>

